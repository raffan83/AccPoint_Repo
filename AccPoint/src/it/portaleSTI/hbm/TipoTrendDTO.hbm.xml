<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="it.portaleSTI.DTO.TipoTrendDTO" table="tipo_trend">
       
        <id name="id" type="int">
            <column name="id" />
            <generator class="native" />
        </id>
        <property name="descrizione" type="java.lang.String">
            <column name="descrizione" />
        </property>
        <property name="tipo_grafico" type="int">
            <column name="tipo_grafico" />
        </property>
        
         <property name="attivo" type="java.lang.Boolean">
            <column name="attivo" sql-type="tinyint"/>
        </property>
       
    </class>
</hibernate-mapping>
