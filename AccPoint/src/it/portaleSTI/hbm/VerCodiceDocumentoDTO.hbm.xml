<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping >
    <class name="it.portaleSTI.DTO.VerCodiceDocumentoDTO" table="ver_codice_famiglia">
        <id name="id" type="int">
            <column name="id" />
            <generator class="native" />
        </id>
       
        <many-to-one name="famiglia" class="it.portaleSTI.DTO.VerFamigliaStrumentoDTO" fetch="join" lazy="false">
            <column name="id_codice_famiglia" />
        </many-to-one>
       <many-to-one name="user" class="it.portaleSTI.DTO.UtenteDTO" fetch="join" lazy="false">
            <column name="id_user" />
        </many-to-one> 
               <property name="count" type="int">
            <column name="count" />
        </property> 
        </class>
</hibernate-mapping>